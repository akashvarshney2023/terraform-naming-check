{
    "compilerOptions": {
      "target": "ESNext",                        /* Set the JavaScript version */
      "module": "CommonJS",                      /* Specify module system */
      "outDir": "./dist",                        /* Output directory for compiled files */
      "strict": true,                            /* Enable all strict type-checking options */
      "esModuleInterop": true,                    /* Enables emit interoperability between CommonJS and ES Modules */
      "forceConsistentCasingInFileNames": true,  /* Ensures consistency in filenames */
      "sourceMap": true,                          /* Generates corresponding .map files for debugging */
      "typeRoots": ["./node_modules/@types", "./types"],
      "types": []
    },
    "include": ["src/**/*"],                     /* TypeScript files to include */
    "exclude": ["node_modules"]                  /* Exclude node_modules */
  }
  